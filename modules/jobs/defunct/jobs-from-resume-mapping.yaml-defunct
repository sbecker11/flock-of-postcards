mapping:
  - source: workExperience
    target: root
    fields:
      - source: companyName
        target: employer
      - source: positionOrTitle
        target: role
      - source: duration
        target: endstart
        transform: combineStartEnd
      - source: responsibilities
        target: description
        transform: joinArray
    constants:
      - target: cssRGB
        value: "#FFFFFF"  # Default value, should be dynamically generated
      - target: textColor
        value: "#000000"  # Default value, should be dynamically generated
      - target: index
        value: null  # Will be set programmatically
